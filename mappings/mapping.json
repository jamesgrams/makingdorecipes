{
    "settings": {
        "index": {
            "analysis": {
                "analyzer": {
                    "keyword_synonym": {
                        "tokenizer": "keyword",
                        "filter": [ "synonym" ]
                    },
                    "english_synonym": {
                        "tokenizer":  "standard",
                        "filter": [
                            "english_possessive_stemmer",
                            "lowercase",
                            "english_stop",
                            "english_stemmer",
                            "synonym"
                        ]
                    }
                },
                "filter": {
                    "synonym": {
                        "type": "synonym",
                        "synonyms": [
                            "milk, dairy",
                            "chickpea, garbanzo bean",
                            "chocolate, cocoa, cocao"
                        ]
                    },
                    "english_stop": {
                        "type":       "stop",
                        "stopwords":  "_english_" 
                    },
                    "english_stemmer": {
                        "type":       "stemmer",
                        "language":   "english"
                    },
                    "english_possessive_stemmer": {
                        "type":       "stemmer",
                        "language":   "possessive_english"
                    }
                }
            }
        }
    },
    "mappings": {
        "properties": {
            "approved": { "type": "boolean" },
            "name": { "type": "text", "analyzer": "english", "fields": { "sayt": {"type":"search_as_you_type" } } },
            "credit": {
                "type": "nested",
                "properties": {
                    "name": { "type": "text" },
                    "link": { "type": "keyword" }
                }
            },
            "tag": {
                "type": "nested",
                "properties": {
                    "name": { "type": "text", "analyzer": "english_synonym", "fields": { "sayt": { "type":"search_as_you_type"}, "keyword" : { "type":"keyword" } } }
                }
            },
            "steps": { "type": "text", "index": false },
            "ingredient": {
                "type": "nested",
                "properties": {
                    "option": {
                        "type": "nested",
                        "properties": {
                            "name": { "type": "text", "analyzer": "english_synonym", "fields": { "sayt": { "type": "search_as_you_type" } } },
                            "name_suggestable": { "type": "keyword" },
                            "quantity": { "type": "text" },
                            "allergen": {
                                "type": "nested",
                                "properties": {
                                    "name": { "type": "text", "analyzer": "english_synonym", "fields": { "sayt": { "type": "search_as_you_type" } } },
                                    "name_suggestable": { "type": "keyword" }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}